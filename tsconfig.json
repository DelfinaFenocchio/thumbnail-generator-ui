{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "paths": {
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"],
      "@/*": ["./src/*"],
      "@atoms/*": ["./src/components/atoms/*"],
      "@atoms": ["./src/components/atoms/index"],
      "@hooks/*": ["./src/helpers/hooks/*"],
      "@hooks": ["./src/helpers/hooks/index"],
      "@globalConstants/*": ["./src/helpers/globalConstants/*"],
      "@globalConstants": ["./src/helpers/globalConstants/index"],
      "@molecules/*": ["./src/components/molecules/*"],
      "@molecules": ["./src/components/molecules/index"],
      "@screens/*": ["./src/screens/*"],
      "@screens": ["./src/screens/index"],
      "@services/*": ["./src/config/api/services*"],
      "@services": ["./src/config/api/services"],
      "@store/*": ["./src/store/*"],
      "@store": ["./src/store/index"],
      "@theme/*": ["./src/helpers/theme/*"],
      "@theme": ["./src/helpers/theme/index"]
    },
    "types": ["vitest/globals"]
},
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
